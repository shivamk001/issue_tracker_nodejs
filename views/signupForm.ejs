        <section class="formContainer">
                <div class="issueTrackerHeading">
                        <h2>Issue Tracker</h2>
                </div>
            <h1>Signup Form</h1>
            <form class="form" action="/user/create" method="POST">
                <input hidden type="text" name="userType" value="regular"/>
                <div class="inputContainer" style="height: 20%;">
                        <p for="username">Username:</p>
                        <input id="username" type="text" name="username" placeholder="Enter username"/><br>
                </div>

                <div class="inputContainer" style="height: 20%;">
                        <p for="email">Email:</p>
                        <input id="email" type="email" name="email" placeholder="Enter Email"/><br>
                </div>

                <div class="inputContainer" style="height: 20%;">
                        <p for="password">Password:</p>
                        <input id="password" type="password" name="password" placeholder="Enter password"/>
                </div>

                <div class="inputContainer" style="height: 20%;">
                        <p for="password">Confirm Password:</p>
                        <input id="password" type="password" name="confirmPassword" placeholder="Enter password"/>
                </div>
                
                <input type="submit" placeholder="Submit" value="Submit"/>
            </form>
        </section>


        <script>
                <% console.log('HOMEPAGE FLASHMESSAGE:', flashMessage) %>
                <% if(flashMessage.success){ %>
                    new Noty({
                            theme: 'relax',
                            text: "<%= flashMessage.success %>",
                            type: "success",
                            layout: 'topRight',
                            timeout: '1500',
                            progressBar: true
                        }).show();
                <% } %>
            
                <% if(flashMessage.info){ %>
                    <%console.log(flashMessage.info);%>
                    new Noty({
                            theme: 'relax',
                            text: "<%= flashMessage.info %>",
                            type: "info",
                            layout: 'topRight',
                            timeout: '3000',
                            progressBar: true
                        }).show();
                <% } %>
            
                <% if(flashMessage.warning || flashMessage.error){ %>
                    <%console.log('Warning Error',flashMessage.warning? flashMessage.warning: flashMessage.error);%>
                    new Noty({
                            theme: 'relax',
                            text: "<%= flashMessage.warning? flashMessage.warning: flashMessage.error %>",
                            type: "warning",
                            layout: 'topRight',
                            timeout: '1500',
                            progressBar: true
                        }).show();
                <% } %>
        </script>