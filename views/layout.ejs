<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/ca58c8957e.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/home.css">
    
    <%- style %>
</head>
<body>

    <section class="parentContainer">
        <section class="leftContainer">
            <h1 style="margin: 10px;">Issue Tracker</h1>
            <div class="linksContainer">
                <a href="/" 
                style="color: <%= page=='home'? '#0049B0' : 'white' %>">
                <i class="fa-solid fa-house" style="color: <%= page=='home'? '#0049B0' : 'white' %>"></i>&nbsp;Home</a>
                <% console.log('User in Layout:', locals.author) %>
                <% if(locals.author!=undefined){ %>
                    <a href="/project/create" 
                    style="color: <%= page=='projectForm'? '#0049B0' : 'white' %>">
                    <i class="fa-solid fa-plus" style="color: <%= page=='projectForm'? '#0049B0' : 'white' %>"></i>&nbsp;Create Project</a>
                <% } %>
    
                <!-- <a href=""><i class="fa-solid fa-filter"></i>&nbsp;Filter Project</a> -->


                <% if(locals.author==undefined){ %>
                    <a href="/user/login"
                    style="color: <%= page=='login'? '#0049B0' : 'white' %>">
                    <i class="fa-solid fa-right-to-bracket" style="color: <%= page=='login'? '#0049B0' : 'white' %>"></i>&nbsp;Login</a>
                    
                    <a href="/user/signup"
                    style="color: <%= page=='signup'? '#0049B0' : 'white' %>">
                    <i class="fa-solid fa-user-plus" style="color: <%= page=='signup'? '#0049B0' : 'white' %>"></i>&nbsp;Signup</a>
                <% }else{ %>
                    <a href="/project/userProjects/<%= locals.author.id %>" style="color: <%= page=='userProjects'? '#0049B0' : 'white' %>"><i class="fa-solid fa-folder"  style="color: <%= page=='userProjects'? '#0049B0' : 'white' %>"></i>&nbsp;My Projects</a>
                    
                    <a href="/issue/userIssues/<%= locals.author.id %>" style="color: <%= page=='userIssues'? '#0049B0' : 'white' %>"><i class="fa-solid fa-bugs" style="color: <%= page=='userIssues'? '#0049B0' : 'white' %>"></i>&nbsp;My Issues</a>
                    
                    <a href="/user/userPage/<%= locals.author.id %>" style="color: <%= page=='userDetailsPage'? '#0049B0' : 'white' %>"><i class="fa-solid fa-user" style="color: <%= page=='userDetailsPage'? '#0049B0' : 'white' %>"></i>&nbsp;<%= locals.author.username %></a>
                    
                    <a href="/user/logout" style="color: <%= page=='signup'? '#0049B0' : 'white' %>"><i class="fa-solid fa-right-from-bracket" style="color: <%= page=='login'? '#0049B0' : 'white' %>"></i>&nbsp;Logout</a>
                    <% } %>
            </div>
        </section>

        <%- body %>
    </section>

    
    
    <%- script %>
</body>
</html>